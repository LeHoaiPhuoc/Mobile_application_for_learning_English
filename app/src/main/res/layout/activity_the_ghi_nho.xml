<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Doc_truyen_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:gravity="center"
            android:text="THẺ GHI NHỚ"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/doc_truyen"/>

        <TextView
            android:id="@+id/tvTuVung"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:textSize="30pt"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:background="@drawable/rounded_background_item_them_tu_vung"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnTuPhiaTruoc"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:backgroundTint="#CCCCCC"
                android:text="Từ phía trước" />

            <Button
                android:id="@+id/btnTuTiepTheo"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:backgroundTint="#FFC107"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_weight="1"
                android:text="Từ tiếp theo" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>