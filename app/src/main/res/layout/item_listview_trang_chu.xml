<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_list_view_rounded_bg_trang_chu"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img1ThongKe"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:src="@drawable/thong_ke" />

        <ImageView
            android:id="@+id/img2ThongKe"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/thong_ke_2" />

        <TextView
            android:id="@+id/tvThongKe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#CC6600"
            android:text="Thống kê" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>